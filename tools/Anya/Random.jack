class Random {
	static int seed;
	function void setSeed(int newSeed) {
        let seed = newSeed;
        return;
    }
    function int rand() {
        let seed = (seed + 1) * 10007;
        return seed;
    }	
	function int binary() {
		var int val;
		let val = Random.rand();
		let val = Utils.modulo(val, 2);
		if(val < 0) { return 1; }
		else { return val; }
	}
}
